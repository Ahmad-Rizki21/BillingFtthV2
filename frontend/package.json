{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "main": "electron.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "vite build && electron-builder",
    "tauri": "tauri",
    "build-only": "vite build",
    "type-check": "vue-tsc --build"
  },
  "build": {
    "appId": "com.artacombilling.app",
    "productName": "Artacom Billing System",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@tauri-apps/plugin-store": "^2.3.0",
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "electron-is-dev": "^3.0.1",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "vuetify": "^3.9.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tauri-apps/cli": "^2.7.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.10"
  }
}
